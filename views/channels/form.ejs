<div class="col-md-6 col-lg-6 col-md-offset-3 col-lg-offset-3">
  <h1><%= action %> a Channel</h1>
  <hr>
  <% var actionRoute = '' %>
  <% if(action === 'Create') { %>
    <% actionRoute = "/channels/new"; %>
  <% } %>
  <% if(action === 'Edit') { %>
    <% actionRoute = "/channels/" + thisChannel.id + "/edit"; %>
  <% } %>
  <form class="form-horiztontal" method="post" action="<%= actionRoute %>">
    <!-- <div class="form-group"> -->
    <% var channelName = ''; %>
    <% if(thisChannel) { %>
      <% channelName = thisChannel.name %>
    <% } %>
      <div class="input-group">
      <label>Channel Name</label>
        <input type="text" class="form-control" placeholder="Channel Name (i.e.  Sports)" value="<%= channelName %>"  name="name">
      </div>
    <!-- </div> -->
      <button type="submit" class="btn btn-primary">Next</button>
  </form>
</div>