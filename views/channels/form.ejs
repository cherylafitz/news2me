
<div class="col-md-8 col-lg-8 col-md-offset-3 col-lg-offset-3">
  <h1><%= action %> a Channel</h1>
  <hr>
  <% var actionRoute = '' %>
  <% if(action === 'Create') { %>
    <% actionRoute = "/channels/new"; %>
  <% } %>
  <% if(action === 'Edit') { %>
    <% actionRoute = "/channels/" + thisChannel.id + "/edit"; %>
  <% } %>
  <form class="form-horizontal" method="post" action="<%= actionRoute %>">
    <% var channelName = ''; %>
    <% if(thisChannel) { %>
      <% channelName = thisChannel.name %>
    <% } %>
    <label>Channel Name</label><input type="text" class="form-control" placeholder="Channel Name (i.e.  Sports)" value="<%= channelName %>"  name="name" autofocus=true>
    <div class="pull-right">
      <button type="submit" class="btn btn-default">Submit</button>
    </div>
  </form>
</div>